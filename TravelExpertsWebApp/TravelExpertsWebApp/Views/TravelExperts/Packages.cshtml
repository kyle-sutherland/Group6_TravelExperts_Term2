@*
Created By: Tim and Kyle
Purpose: Displays package options and relevant details
*@

@model IEnumerable<TravelExpertsData.Package>

@{
    ViewData["Title"] = "Packages";
}

<h1>Packages</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th >
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Description
            </th>
            <th>
                Base Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PkgName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgBasePrice)
            </td>
            <td>
                @Html.ActionLink("Booking this package!", "CreateBooking", new { id=item.PackageId })
            </td>
        </tr>
}
    </tbody>
</table>
