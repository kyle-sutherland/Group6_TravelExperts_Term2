@*
Created By: Tim
Purpose: View for customers to see their bookings
*@
@model IEnumerable<TravelExpertsData.Package>

@{
    ViewData["Title"] = "MyBookings";
}

<h1>MyBookings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Description
            </th>
            <th>
                Base Price
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PkgName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgBasePrice)
            </td>
        </tr>
}
    </tbody>
</table>

<p>Total Amount of Package Owed: @ViewBag.TotalSum</p>
